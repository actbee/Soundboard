<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:elevation="16dp">

<LinearLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@drawable/cardview_selector">

    <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/board_image"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorCharcoal" />
    <TextView
            android:paddingHorizontal="8dp"
            android:textColor="@color/colorCharcoal"
            android:id="@+id/board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/inter_semibold"
            android:text = "Board Name"/>

    <TextView
            android:paddingHorizontal="8dp"
            android:id="@+id/board_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/inter_medium"
            android:text = "89 soundbytes"/>
</LinearLayout>
</androidx.cardview.widget.CardView>